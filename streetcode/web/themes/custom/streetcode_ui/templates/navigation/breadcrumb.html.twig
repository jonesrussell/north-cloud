{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav class="breadcrumb flex flex-wrap items-center gap-2 text-sm text-gray-600" role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="sr-only">{{ 'Breadcrumb'|t }}</h2>
    <ol class="flex flex-wrap items-center gap-2 list-none m-0 p-0">
    {% for item in breadcrumb %}
      <li class="flex items-center gap-2">
        {% if item.url %}
          <a href="{{ item.url }}" class="hover:text-primary-600 transition-colors no-underline">{{ item.text }}</a>
        {% else %}
          <span class="text-gray-900 font-medium">{{ item.text }}</span>
        {% endif %}
        {% if not loop.last %}
          <span class="text-gray-400" aria-hidden="true">/</span>
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
