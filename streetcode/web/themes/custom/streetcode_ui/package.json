{
  "name": "streetcode-ui-theme",
  "version": "1.0.0",
  "description": "Streetcode UI theme with Tailwind CSS 4",
  "scripts": {
    "build": "tailwindcss -i ./css/tailwind.css -o ./css/tailwind.min.css --minify",
    "watch": "tailwindcss -i ./css/tailwind.css -o ./css/tailwind.min.css --watch",
    "dev": "tailwindcss -i ./css/tailwind.css -o ./css/tailwind.min.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^4.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0"
  }
}
