FROM php:8.3-fpm

# Install system dependencies and PHP extensions required by Drupal
RUN apt-get update && apt-get install -y \
    git \
    curl \
    nginx \
    libpng-dev \
    libjpeg-dev \
    libwebp-dev \
    libavif-dev \
    libaom-dev \
    libdav1d-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    unzip \
    libpq-dev \
    && docker-php-ext-configure gd --with-jpeg --with-webp --with-avif \
    && docker-php-ext-install pdo pdo_pgsql mbstring exif pcntl bcmath gd zip opcache \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Setup Nginx default site (config will be mounted, but we need the symlink)
RUN rm -f /etc/nginx/sites-enabled/default && \
    mkdir -p /etc/nginx/sites-available && \
    touch /etc/nginx/sites-available/default && \
    ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Create startup script inline (since we can't copy it)
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Start PHP-FPM in background\n\
php-fpm -D\n\
\n\
# Start Nginx in foreground\n\
exec nginx -g "daemon off;"' > /usr/local/bin/start.sh && \
    chmod +x /usr/local/bin/start.sh

# Note: No files are copied here - everything will be mounted as volumes:
# - composer.json/composer.lock (dependencies installed at runtime or via volume)
# - php.ini, www.conf, nginx.conf, start.sh (can be mounted or use defaults)
# - All source code will be mounted from host filesystem
# - Files will be owned by host user, not container user

# Expose port 80
EXPOSE 80

# Health check (curl is already installed above)
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD curl -f http://localhost/ || exit 1

# Start both PHP-FPM and Nginx
CMD ["/usr/local/bin/start.sh"]
