FROM golang:1.25-alpine

ARG UID=1000
ARG GID=1000

WORKDIR /app

# Install dev tools
RUN apk add --no-cache git bash

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

# Create non-root user (docker-compose will override UID/GID)
RUN addgroup -g ${GID} appuser && \
    adduser -D -u ${UID} -G appuser appuser

# Writable caches in /tmp
RUN mkdir -p /tmp/go-mod-cache \
             /tmp/go-build-cache \
             /tmp/npm-cache && \
    chmod 1777 /tmp/go-mod-cache \
                /tmp/go-build-cache \
                /tmp/npm-cache

# Go cache locations
ENV GOCACHE=/tmp/go-build-cache
ENV GOMODCACHE=/tmp/go-mod-cache
ENV NPM_CONFIG_CACHE=/tmp/npm-cache

EXPOSE 8060 3000

# Default dev command:
# - start frontend dev server
# - start backend with go run
CMD ["go", "run", "-mod=mod", "main.go"]
