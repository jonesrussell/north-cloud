FROM golang:1.25-alpine

WORKDIR /app

# Dev tools (Go + frontend)
RUN apk add --no-cache git curl wget nodejs npm

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

# Create fallback non-root user (docker-compose will override UID/GID)
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

# Writable caches
RUN mkdir -p /tmp/go-mod-cache \
             /tmp/go-build-cache \
             /tmp/npm-cache && \
    chmod 1777 /tmp/go-mod-cache \
                /tmp/go-build-cache \
                /tmp/npm-cache

# Copy go.mod files (source will be bind-mounted)
COPY go.mod go.sum ./

EXPOSE 8050 3000

# Cache locations
ENV GOCACHE=/tmp/go-build-cache
ENV GOMODCACHE=/tmp/go-mod-cache
ENV NPM_CONFIG_CACHE=/tmp/npm-cache

# Default dev command: frontend + backend
CMD ["sh", "-c", "go run -mod=mod ./main.go -config config.yml"]
