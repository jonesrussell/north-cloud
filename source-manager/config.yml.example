# Application debug mode
# When true: uses development logger (human-readable, colorized output)
# When false: uses production logger (JSON format, optimized for performance)
# Can be overridden with APP_DEBUG environment variable
debug: false

server:
  host: "0.0.0.0"  # Use 0.0.0.0 to bind to all interfaces, or set SERVER_HOST env var
  port: 8050
  read_timeout: "30s"
  write_timeout: "30s"

database:
  host: "localhost"
  port: 5432
  user: "postgres"
  password: "postgres"
  dbname: "source_manager"
  sslmode: "disable"
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: "5m"

