FROM golang:1.25-alpine

WORKDIR /app

# Install tools needed for development
RUN apk add --no-cache git bash

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

# Writable Go caches in /tmp
RUN mkdir -p /tmp/go-mod-cache /tmp/go-build-cache && \
    chmod 1777 /tmp/go-mod-cache /tmp/go-build-cache

# Copy go.mod files (source code is mounted at runtime)
COPY go.mod go.sum ./

EXPOSE 8070

# Go cache locations
ENV GOCACHE=/tmp/go-build-cache
ENV GOMODCACHE=/tmp/go-mod-cache

# Default dev command
CMD ["go", "run", "main.go"]
